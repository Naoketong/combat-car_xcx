        page {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            height: 100%;
        }
        
        .container {
            height: 100%;
            padding: 0 30rpx 0 30rpx;
            background-color: #fff;
        }
        
        .search-section {
            font-size: 0;
        }
        
        .search-name {
            display: inline-block;
            font-size: 30rpx;
            font-weight: 900;
            vertical-align: middle;
        }
        
        .search-block {
            display: inline-block;
            width: 517rpx;
            height: 72rpx;
            background-color: #f0f0f0;
            border-radius: 40rpx;
            margin-left: 38rpx;
            vertical-align: middle;
        }
        
        .options-section {
            margin-top: 46rpx;
        }
        
        .options-list {
            font-size: 0;
            height: 84rpx;
            border-bottom: 2rpx solid #f5f5f5;
        }
        
        .options-item {
            display: inline-block;
            font-size: 38rpx;
            color: #8e8e8e;
            width: 33.33%;
            text-align: center;
        }
        
        .options-item.active {
            position: relative;
            color: #272727;
            font-weight: 900;
            font-size: 40rpx;
        }
        
        .options-item.active:after {
            content: '';
            display: inline-block;
            position: absolute;
            top: 70rpx;
            left: 50%;
            transform: translateX(-50%);
            width: 26rpx;
            height: 8rpx;
            background-color: #5b9eef;
        }